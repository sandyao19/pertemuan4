    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="123dp"
        android:id="@+id/button3" />
</RelativeLayout>